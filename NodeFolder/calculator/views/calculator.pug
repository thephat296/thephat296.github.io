doctype html
head
  title Calculator
  link(rel='stylesheet' type='text/css' href='calculator.css')
h1 Calculator
form(action='/calculate' method='get')
  input(type='text' name='num1' placeholder='Enter number 1' required='')
  br
  input(type='text' name='num2' placeholder='Enter number 2' required='')
  br
  select(name='operation')
    option(value='add') Add
    option(value='subtract') Subtract
    option(value='multiply') Multiply
    option(value='divide') Divide
  br
  button(type='submit') Calculate
script(src='calculatorwebserver.js')